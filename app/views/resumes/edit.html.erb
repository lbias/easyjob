<div class="container">
  <div class=" col-md-8 col-md-offset-2 col-xs-12">
    <h1 class="text-center" style="font-size: 30px;">编辑简历</h1>

    <%= simple_form_for @resume do |f| %>
    <%= f.input :name, label: "姓名" %>
    <%= f.input :description, as: :text, label: "自我简介" %>
    <%= f.input :logdown, label: "Logdown 地址"%>
    <%= f.input :fs_username, label: "全栈营ID"%>
    <%= f.input :semester, label: "第几期学员"%>
    <%= f.input :work_place,label: "希望工作城市"%>
    <!-- <%= f.input :contact_email, lable: "联系方式" %> -->
    <%= f.input :introduction, label: "用于首页展示简介" %>
    <%= f.input :fs_link, label: "全栈营的个人主页链接" %>
    <%= f.input :wechatimg, label: "微信二维码", as: :file%>
    <br>
    <div class="group">
      <% if @resume.photos.present? %>
      <span style="font-size: 25px;">目前图片</span>
      <br>
      <% @resume.photos.each do |p| %>
      <div class="col-xs-3">
        <%= image_tag p.avatar.thumb.url %>
      </div>
      <% end %>
      <% end %>
      <div class="clearfix"></div>
      <br>
      <div class="group">
        <%= f.label :作品展示图 %><br>
        <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
      </div>
    </div>
    <div class="clearfix"></div>
    <%= f.input :is_show %>
    <%= f.input :wmf,label: "Job-listing大赛作品截图" %>
    <%= f.input :wmf_link, label: "第一次大赛作品地址" %>
    <%= f.input :wmf_git, label: "第一次大赛作品github地址" %>
    <%= f.input :wms, label: "商店大赛作品截图" %>
    <%= f.input :wms_link, label: "第二次大赛作品地址" %>
    <%= f.input :wms_git, label: "第二次大赛作品github地址" %><br>
    <%= f.submit "提交", class: "btn btn-success"%>
    <% end %>

    <hr>
    <h1 style="font-size: 20px;">此简历的标签</h1>
    <% if @tags.present? %>
    <table class="table table-bordered table-hover">
      <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.re_tag %></td>
        <td><%= link_to("Delete", resume_tag_path(@resume,tag), class: "btn btn-primary", method: :delete, data:{confirm: "Are you sure?"})%></td>
      </tr>
      <% end %>
    </table>
    <% end %>
    <hr>
    <div class="ro">
      <h1 class="text-center" style="font-size: 30px;">为简历增加标签</h1>
      <%= simple_form_for [@resume,@tag] do |f| %>
      <%= f.input :re_tag, label: "标签"%><br>
      <%= f.button :submit, "增加", class: "btn btn-success"  %>
      <% end %>
    </div>
  </div>
</div>
